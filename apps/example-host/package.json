{
	"name": "example-host",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "concurrently -n VITE,SSR -c auto \"vite --config vite.client.config.js\" \"nodemon --watch src/server --ext js,jsx --exec node src/server/index.js\"",
		"build": "yarn build:client",
		"build:client": "vite build --config vite.client.config.js && node scripts/gen-islands-manifest.mjs",
		"start": "NODE_ENV=production node src/server/index.js"
	},
	"dependencies": {
		"@jennifer-elyse/react-islands": "workspace:*",
		"express": "^4.19.2",
		"path-to-regexp": "^6.2.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@vitejs/plugin-react": "^4.3.1",
		"concurrently": "^9.0.1",
		"glob": "^10.4.5",
		"nodemon": "^3.1.7",
		"vite": "^5.4.10"
	}
}
