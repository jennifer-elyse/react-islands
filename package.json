{
	"name": "react-islands-runtime",
	"license": "MIT",
	"version": "0.1.22",
	"type": "module",
	"description": "SSR-first React islands runtime and server helpers",
	"main": "dist/server/index.js",
	"sideEffects": false,
	"engines": {
		"node": ">=22.0.0"
	},
	"files": [
		"src/server/render/**",
		"src/server/router/**",
		"src/server/islands/**",
		"src/server/security/**",
		"src/server/manifest.js",
		"src/server/renderRequest.js",
		"src/server/genManifest.js",
		"src/server/serialize.js",
		"src/client/islands-runtime.js",
		"src/shared/serialize.js",
		"dist/server/*.js",
		"dist/client/*.js",
		"dist",
		"packages/ssr/index.js",
		"packages/islands/index.js",
		"packages/rsc/index.js"
	],
	"exports": {
		".": "./dist/server/index.js",
		"./server": "./dist/server/index.js",
		"./client/runtime": "./dist/client/islands-runtime.js",
		"./ssr": "./packages/ssr/index.js",
		"./islands": "./packages/islands/index.js",
		"./rsc": "./packages/rsc/index.js"
	},
	"bin": {
		"react-islands-gen-manifest": "./src/server/genManifest.js"
	},
	"peerDependencies": {
		"react": ">=19.0.0",
		"react-dom": ">=19.0.0"
	},
	"scripts": {
		"pack:patch": "npm version patch --no-git-tag-version && node -e \"const v=require('./package.json').version;require('child_process').execSync('yarn pack --filename builds/react-islands-runtime-'+v+'.tgz',{stdio:'inherit'})\"",
		"pack:minor": "npm version minor --no-git-tag-version && node -e \"const v=require('./package.json').version;require('child_process').execSync('yarn pack --filename builds/react-islands-runtime-'+v+'.tgz',{stdio:'inherit'})\"",
		"pack:major": "npm version major --no-git-tag-version && node -e \"const v=require('./package.json').version;require('child_process').execSync('yarn pack --filename builds/react-islands-runtime-'+v+'.tgz',{stdio:'inherit'})\"",
		"lint": "yarn lint:js && yarn lint:css",
		"lint:js": "eslint .",
		"lint:css": "stylelint \"**/*.{css,scss,sass,less}\" --allow-empty-input",
		"lint:fix": "eslint . --fix && stylelint \"**/*.{css,scss,sass,less}\" --fix --allow-empty-input",
		"format:fix": "prettier --write ."
	},
	"dependencies": {
		"path-to-regexp": "^6.2.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@vitejs/plugin-react": "^4.3.4",
		"cross-env": "^10.1.0",
		"esbuild": "^0.27.3",
		"eslint": "^9.17.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"glob": "^13.0.2",
		"globals": "^17.3.0",
		"nodemon": "^3.1.0",
		"prettier": "^3.8.1",
		"stylelint": "^17.2.0",
		"stylelint-config-standard": "^40.0.0",
		"vite": "^6.1.0"
	}
}
