{
	"name": "react-island-runtime",
	"license": "MIT",
	"version": "0.1.13",
	"type": "module",
	"description": "SSR-first React islands runtime and server helpers",
	"main": "dist/server/index.js",
	"sideEffects": false,
	"engines": {
		"node": ">=18"
	},
	"files": [
		"dist/server/*.js",
		"dist/client/*.js",
		"dist"
	],
	"exports": {
		".": "./dist/server/index.js",
		"./server": "./dist/server/index.js",
		"./client/runtime": "./dist/client/islands-runtime.js"
	},
	"bin": {
		"react-islands-gen-manifest": "./dist/server/genManifest.js"
	},
	"peerDependencies": {
		"react": ">=19.0.0",
		"react-dom": ">=19.0.0"
	},
	"devDependencies": {
		"esbuild": "^0.27.3",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"dependencies": {
		"path-to-regexp": "^6.2.1"
	},
	"scripts": {
		"clean": "rm -rf dist node_modules",
		"build": "node ./scripts/build.mjs",
		"test": "node --test",
		"prepublishOnly": "yarn build",
		"pack": "npm pack",
		"package": "yarn clean && yarn && yarn build && yarn pack",
		"publish": "npm publish --access public",
		"bump:patch": "npm version patch",
		"bump:minor": "npm version minor",
		"bump:major": "npm version major"
	},
	"publishConfig": {
		"access": "public"
	}
}
